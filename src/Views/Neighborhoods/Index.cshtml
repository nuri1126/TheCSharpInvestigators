@page
@model LetsGoSEA.WebSite.Views.Neighborhoods.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NeighborhoodModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeighborhoodModel[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeighborhoodModel[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeighborhoodModel[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeighborhoodModel[0].ShortDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NeighborhoodModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDesc)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model LetsGoSEA.WebSite.Pages.Explore.Index

<!--Explore homepage: shows all the neighborhoods in card format-->
@{
    ViewData["Title"] = "Explore";
    Layout = "Shared/_Layout";
}

<h1>Explore the beautiful neighborhoods of Seattle!</h1>

<div class="card-columns">
    @foreach (var neighborhood in @Model.Neighborhoods)
    {
        <div class="card">
            <div class="card-img" style="background-image: url('@neighborhood.Image');">
            </div>
            <div class="card-body">
                <h5 class="card-title">@neighborhood.Name</h5>
            </div>
            <div class="card-footer">
                <small>@neighborhood.ShortDesc</small> <br/>
                <small class="text-muted" style="display: block">
                    <a class="btn btn-primary" role="button" asp-page="Neighborhood" asp-route-id="@neighborhood.Id">Explore More</a>
                </small>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">